<h1>Add New Classification</h1>
<%- messages() %>
    <% if (typeof errors !=='undefined' && errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>
            <div class="form-container">
                <form action="/inv/add-classification" method="post" onsubmit="return validateForm(event)">
                    <label for="classification_name">Classification Name:</label>
                    <input type="text" id="classification_name" name="classification_name" required
                        pattern="^[A-Za-z0-9]+$" title="No spaces or special characters allowed.">
                    <div id="error-message"></div>
                    <p class="form-direction">Classification name cannot contain a space or special character of any
                        kind.</p>
                    <button type="submit">Add Classification</button>
                </form>
            </div>
            <script>
                // Client-side validation: only letters and numbers, no spaces or special characters
                function validateForm(event) {
                    const input = document.getElementById('classification_name');
                    const value = input.value;
                    const regex = /^[A-Za-z0-9]+$/;
                    if (!regex.test(value)) {
                        event.preventDefault();
                        document.getElementById('error-message').textContent = 'Classification name must not contain spaces or special characters.';
                        input.focus();
                        return false;
                    }
                    document.getElementById('error-message').textContent = '';
                    return true;
                }
            </script>